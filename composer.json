{
  "name": "mlopez/supergiros",
  "description": "",
  "keywords": [
    "PHP",
    "Supergiros",
    "Loteria",
    "Barranquilla",
    "Colombia",
    "Loteria de Barranquilla",
    "Lottery"
  ],
  "authors": [
    {
      "name": "Miguel Lopez Ariza",
      "email": "lopezarizamiguel@gmail.com"
    }
  ],
  "homepage": "https://github.com/parrotsoft/supergiros",
  "require": {
    "php": "^8.3",
    "ext-curl": "*",
    "ext-dom": "*",
    "guzzlehttp/guzzle": "^7.8"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Mlopez\\Supergiros\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mlopez\\Supergiros\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit tests",
    "phpcs": "vendor/bin/php-cs-fixer fix src && vendor/bin/php-cs-fixer fix tests",
    "phpcs-check": "vendor/bin/php-cs-fixer check src && vendor/bin/php-cs-fixer check tests",
    "coverage": "php -dxdebug.mode=coverage vendor/bin/phpunit --coverage-clover='reports/coverage/coverage.xml' --coverage-html='reports/coverage'"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "friendsofphp/php-cs-fixer": "^3.48"
  }
}
